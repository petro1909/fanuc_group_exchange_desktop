<Window x:Class="fanuc_group_exchange_desktop.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fanuc_group_exchange_desktop"
        mc:Ignorable="d"
        Title="Fanuc Group Exchanger" 
        WindowStyle="None" 
        AllowsTransparency="False"
        ResizeMode="CanResizeWithGrip"
        MinHeight="500" 
        MinWidth="970">
        
        

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="resources/dictionaries/DarkThemeWinDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="MainGrid" Background="#FF1E1E1E"  >

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" MinWidth="500"></ColumnDefinition>
            <ColumnDefinition Width="45*" MinWidth="450"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  MouseDown="DragWindow"  Background="#FF3C3C3C">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel  Grid.Column="0" Orientation="Horizontal" Margin="5 0 0 0">
                <Image Source="resources/img/pngfind.com-robot-icon-png-1400144.png" Width="18" Height="18" ></Image>
                <TextBlock Text="Fanuc Group Exchanger"></TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                <Button x:Name="MinimizeWindow"  Click="MinimizeWindowClick">
                    <Image Source="resources/img/icons8-вычитание-50.png" ></Image>
                </Button>
                <Button x:Name="ChangeSinzeOfWindow"   Click="ChangeSinzeOfWindowClick">
                    <Image x:Name="ChangeSinzeOfWindowImage"   Source="resources/img/icons8maximize32.png"></Image>
                </Button>
                <Button x:Name="CloseeWindow"   Click="CloseWindowClick">
                    <Image Source="resources/img/icons8del32.png"></Image>
                </Button>
            </StackPanel>
        </Grid>


        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="95*"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>

            <ScrollViewer>
                <TextBlock Grid.Row="0" x:Name="FileCode" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" />
            </ScrollViewer>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="OpenFile" Width="100" Click="GetFileCode">Open File</Button>
                <Button x:Name="Save" Width="100"  Click="SaveFile">Save</Button>
                <Button x:Name="SaveAs" Width="100"  Click="SaveFileAs" >Save as</Button>
            </StackPanel>
        </Grid>

        <Grid x:Name="GroupInforamtion" Grid.Row="1" Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="70*"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel x:Name="UsedGroups" Grid.Row="0" MinHeight="100" Orientation="Horizontal">
            </StackPanel>

            <ScrollViewer Grid.Row="1" >
                <StackPanel>
                    <ListBox x:Name="Groups" BorderThickness="0"></ListBox>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Row="2" HorizontalAlignment="Left" Width="170">
                <Button x:Name="AddGroup" Content="Add Group Block" Click="AddGroupPanel"/>
                <Button x:Name="SaveGroups" Content="Save Group" Click="SaveGroup_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
