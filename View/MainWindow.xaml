<Window x:Class="fanuc_group_exchange_desktop.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="http://schemas.microsoft.com/winfx/2006/xaml/presentation/shell"
        xmlns:local="clr-namespace:fanuc_group_exchange_desktop.View"
        mc:Ignorable="d"
        Title="Fanuc Group Exchanger" 
        WindowStyle="None" 
        AllowsTransparency="True"
        MinWidth="980" MinHeight="500">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="25"
                      GlassFrameThickness="2"
                      />
    </WindowChrome.WindowChrome>
    
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="resources/dictionaries/DarkThemeWinDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style BasedOn="{StaticResource ControlStyle}" x:Key="TextBoxStyle">
                <Setter Property="ItemsControl.Height" Value="30"/>
                <Setter Property="ItemsControl.VerticalContentAlignment" Value="Center"/>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="MainGrid" Background="{StaticResource DarkThemeBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" MinWidth="450"></ColumnDefinition>
            <ColumnDefinition Width="45*" MinWidth="515"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#FF3C3C3C">
            <DockPanel WindowChrome.IsHitTestVisibleInChrome="True">
                <StackPanel DockPanel.Dock="Left"  Orientation="Horizontal" Margin="5 0 0 0">
                    <Image Source="resources/img/robot.png" Width="18" Height="18" ></Image>
                    <TextBlock Text="Fanuc Group Exchanger"></TextBlock>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal"  HorizontalAlignment="Right">
                    <Button x:Name="MinimizeButton" Click="MinimizeClick" >
                        <Image Source="resources/img/minimize.png" ></Image>
                    </Button>
                    <Button x:Name="MaximizeButton" Click="MaximizeClick">
                        <Image x:Name="ChangeSinzeOfWindowImage" Source="resources/img/maximize.png"></Image>
                    </Button>
                    <Button x:Name="CloseButton" Click="CloseClick">
                        <Image Source="resources/img/close.png"></Image>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="95*"></RowDefinition>
            </Grid.RowDefinitions>

            <ScrollViewer>
                <TextBlock Grid.Row="0" x:Name="FileCode" Text="{Binding ProgramText}"/>
            </ScrollViewer>
        </Grid>

        <Grid x:Name="GroupInforamtion" Grid.Row="1" Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"></RowDefinition>
                <RowDefinition Height="80*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel x:Name="UsedGroups" Grid.Row="0" MinHeight="100">
                <TextBlock Style="{StaticResource ControlStyle}" Text="List of used groups in choosen program" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                <WrapPanel VerticalAlignment="Top" Orientation="Horizontal" Margin="6,0,0,0">
                    <d:StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource ControlStyle}" Text="{Binding StringFormat=Group {0}, Path=UsedGroupNumber}" d:Text="Group 1"></TextBlock>
                        <Button Grid.Row="0" Grid.Column="1" Command="{Binding DeleteUsedGroup}"  Margin="3 0 3 0" Width="23" Height="23" >
                            <Button.BorderThickness>0</Button.BorderThickness>
                            <Image Source="resources/img/delete.png"/>
                        </Button>
                        <Border BorderThickness="0.5" BorderBrush="#FFDCDCDC"></Border>
                    </d:StackPanel>
                    <ItemsControl ItemsSource="{Binding UsedGroupViewModels}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource ControlStyle}" Text="{Binding StringFormat=Group {0}, Path=UsedGroupNumber}" d:Text="Group 1"></TextBlock>
                                    <Button Grid.Row="0" Grid.Column="1" Command="{Binding DeleteUsedGroup}"  Margin="3 0 3 0" Width="23" Height="23" >
                                        <Button.BorderThickness>0</Button.BorderThickness>
                                        <Image Source="resources/img/delete.png"/>
                                    </Button>
                                    <Border BorderThickness="0.5" BorderBrush="#FFDCDCDC"></Border>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </WrapPanel>
            </StackPanel>


            <ScrollViewer Grid.Row="1">
                <StackPanel>

                    <d:Grid MinWidth="350">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20*"></ColumnDefinition>
                            <ColumnDefinition Width="80*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,26.2,0,0">
                            <Label Style="{StaticResource ControlStyle}" Target="{Binding ElementName=GroupNumber}" HorizontalAlignment="Center" Content="Group &#xD;&#xA;Number"/>
                            <TextBox x:Name="GroupNumber"  Style="{StaticResource TextBoxStyle}" Text="{Binding Path=GroupNumber}" d:Text="2"></TextBox>
                        </StackPanel>

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource ControlStyle}" Text="List of coordinates"/>
                            <Button Grid.Row="0" Grid.Column="1" x:Name="delete_group_1" Command="{Binding DeleteGroupBlockCommand}"  Margin="3 0 0 0" Width="23" Height="23" >
                                <Button.BorderThickness>0</Button.BorderThickness>
                                <Image Source="resources/img/delete.png"/>
                            </Button>

                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Background="#FF1E1E1E">
                                <TextBlock Style="{StaticResource ControlStyle}">UF :</TextBlock>
                                <TextBox Background="#FF1E1E1E" Style="{StaticResource ControlStyle}" x:Name="UserFrame" Width="50"  Text="{Binding Path=GroupFrame}"></TextBox>
                                <TextBlock Style="{StaticResource ControlStyle}">UT :</TextBlock>
                                <TextBox Background="#FF1E1E1E" Style="{StaticResource ControlStyle}" x:Name="UserTool" Width="50"  Text="{Binding Path=GroupTool}"></TextBox>
                            </StackPanel>

                            <StackPanel Grid.Row="2" x:Name="GroupsCoordinates" Style="{StaticResource ControlStyle}">
                                <d:StackPanel Height="30" x:Name="CoordianteStackPanel" Orientation="Horizontal" Background="#FF1E1E1E">
                                    <TextBlock  Foreground="#FFDCDCDC" Padding="0 2" x:Name="CoordinateNumber" Text="{Binding StringFormat=J{0}\=, Path=CoordinateNumber}"></TextBlock>
                                    <TextBox Foreground="#FFDCDCDC" Background="#FF1E1E1E" Height="30" VerticalAlignment="Center" x:Name="GroupPosition" Width="180" Text="{Binding Path=CoordinatePosition}"/>
                                    <ComboBox SelectedIndex="0" SelectedItem="{Binding Path=CoordinateUnit}" ItemsSource="{Binding Units}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderThickness="0">
                                                    <TextBlock Text="{Binding}" ></TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Button x:Name="delete_coordinate_1" Command="{Binding DeleteCoordinateCommand}"  Margin="3 0 0 0" Width="23" Height="23" Background="#FF1E1E1E">

                                        <Button.BorderThickness>0</Button.BorderThickness>
                                        <Image Source="resources/img/delete.png"></Image>
                                    </Button>
                                </d:StackPanel>
                                <ItemsControl ItemsSource="{Binding Coordinates}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Height="30" x:Name="CoordianteStackPanel" Orientation="Horizontal" Background="#FF1E1E1E">
                                                <TextBlock  Foreground="#FFDCDCDC" Padding="0 2" x:Name="CoordinateNumber" Text="{Binding StringFormat=J{0}\=, Path=CoordinateNumber}"></TextBlock>
                                                <TextBox Foreground="#FFDCDCDC" Background="#FF1E1E1E" Height="30" VerticalAlignment="Center" x:Name="GroupPosition" Width="180" Text="{Binding Path=CoordinatePosition}"/>
                                                <ComboBox SelectedIndex="0" SelectedItem="{Binding Path=CoordinateUnit}" ItemsSource="{Binding Units}">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderThickness="0">
                                                                <TextBlock Text="{Binding}" ></TextBlock>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                                <Button x:Name="delete_coordinate_1" Command="{Binding DeleteCoordinateCommand}"  Margin="3 0 0 0" Width="23" Height="23" Background="#FF1E1E1E">

                                                    <Button.BorderThickness>0</Button.BorderThickness>
                                                    <Image Source="resources/img/delete.png"></Image>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>

                            <Button Grid.Row="3" x:Name="addCoordinate" Command="{Binding AddCoordinateBlockCommand}" Width="25" Height="25" HorizontalAlignment="Left" Margin="0 0 9 0">
                                <Button.BorderThickness>0</Button.BorderThickness>
                                <Image Source="resources/img/delete.png"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image.RenderTransform>
                                        <RotateTransform CenterX="9.5" CenterY="9.5" Angle="45" ></RotateTransform>
                                    </Image.RenderTransform>
                                </Image>
                            </Button>
                        </Grid>
                        <Border Grid.Row="1" Grid.ColumnSpan="2">
                            <Border.Background>
                                <SolidColorBrush Color="#FFDCDCDC"></SolidColorBrush>
                            </Border.Background>
                        </Border>
                    </d:Grid>


                    <ItemsControl  ItemsSource="{Binding AddingGroupViewModels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid MinWidth="350">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20*"></ColumnDefinition>
                                        <ColumnDefinition Width="80*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="1"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,26.2,0,0">
                                        <Label Style="{StaticResource ControlStyle}" Target="{Binding ElementName=GroupNumber}" HorizontalAlignment="Center" Content="Group &#xD;&#xA;Number"/>
                                        <TextBox x:Name="GroupNumber"  Style="{StaticResource TextBoxStyle}" Text="{Binding Path=GroupNumber}" d:Text="2"></TextBox>
                                    </StackPanel>

                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="40"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource ControlStyle}" Text="List of coordinates"/>
                                        <Button Grid.Row="0" Grid.Column="1" x:Name="delete_group_1" Command="{Binding DeleteGroupBlockCommand}"  Margin="3 0 0 0" Width="23" Height="23" >
                                            <Button.BorderThickness>0</Button.BorderThickness>
                                            <Image Source="resources/img/delete.png"/>
                                        </Button>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Background="#FF1E1E1E">
                                            <TextBlock Style="{StaticResource ControlStyle}">UF :</TextBlock>
                                            <TextBox Background="#FF1E1E1E" Style="{StaticResource ControlStyle}" x:Name="UserFrame" Width="50"  Text="{Binding Path=GroupFrame}"></TextBox>
                                            <TextBlock Style="{StaticResource ControlStyle}">UT :</TextBlock>
                                            <TextBox Background="#FF1E1E1E" Style="{StaticResource ControlStyle}" x:Name="UserTool" Width="50"  Text="{Binding Path=GroupTool}"></TextBox>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" x:Name="GroupsCoordinates" Style="{StaticResource ControlStyle}">
                                            <ItemsControl ItemsSource="{Binding Coordinates}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Height="30" x:Name="CoordianteStackPanel" Orientation="Horizontal" Background="#FF1E1E1E">
                                                            <TextBlock  Foreground="#FFDCDCDC" Padding="0 2" x:Name="CoordinateNumber" Text="{Binding StringFormat=J{0}\=, Path=CoordinateNumber}"></TextBlock>
                                                            <TextBox Foreground="#FFDCDCDC" Background="#FF1E1E1E" Height="30" VerticalAlignment="Center" x:Name="GroupPosition" Width="180" Text="{Binding Path=CoordinatePosition}"/>
                                                            <ComboBox SelectedIndex="0" SelectedItem="{Binding Path=CoordinateUnit}" ItemsSource="{Binding Units}">
                                                            </ComboBox>
                                                            <Button x:Name="delete_coordinate_1" Command="{Binding DeleteCoordinateCommand}"  Margin="3 0 0 0" Width="23" Height="23" Background="#FF1E1E1E">

                                                                <Button.BorderThickness>0</Button.BorderThickness>
                                                                <Image Source="resources/img/delete.png"></Image>
                                                            </Button>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                        <Button Grid.Row="3" x:Name="addCoordinate" Command="{Binding AddCoordinateBlockCommand}" Width="25" Height="25" HorizontalAlignment="Left" Margin="0 0 9 0">
                                            <Button.BorderThickness>0</Button.BorderThickness>
                                            <Image Source="resources/img/delete.png"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Image.RenderTransform>
                                                    <RotateTransform CenterX="9.5" CenterY="9.5" Angle="45" ></RotateTransform>
                                                </Image.RenderTransform>
                                            </Image>
                                        </Button>
                                    </Grid>
                                    <Border Grid.Row="1" Grid.ColumnSpan="2">
                                        <Border.Background>
                                            <SolidColorBrush Color="#FFDCDCDC"></SolidColorBrush>
                                        </Border.Background>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="OpenFile" Width="100" Command="{Binding GetFileCodeCommand}">Open File</Button>
            <Button x:Name="Save" Width="100"  Command="{Binding SaveFileCommand}">Save</Button>
            <Button x:Name="SaveAs" Width="100"  Command="{Binding SaveFileAsCommand}" >Save as</Button>
            <Button x:Name="SaveGroups" Content="Save Group" Command="{Binding SaveAddedGroupsCommand}"/>
            <Button x:Name="AddGroup" Content="Add Group Block" Command="{Binding AddGroupBlockCommand}"/>
        </StackPanel>

    </Grid>
</Window>