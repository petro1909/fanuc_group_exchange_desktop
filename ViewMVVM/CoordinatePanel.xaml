<UserControl x:Class="fanuc_group_exchange_desktop.ViewMVVM.CoordinatePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:fanuc_group_exchange_desktop"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <StackPanel Height="30" x:Name="CoordianteStackPanel" Orientation="Horizontal" Background="#FF1E1E1E">
        <TextBlock  Foreground="#FFDCDCDC" Padding="0 2" x:Name="CoordinateNumber" Text="{Binding CoordinateNumber}"></TextBlock>
        <TextBox Foreground="#FFDCDCDC" Background="#FF1E1E1E" Height="30" VerticalAlignment="Center" x:Name="GroupPosition" Width="180" Text="{Binding CoordiantePosition}"/>
        <ComboBox x:Name="Units" SelectedIndex="0">
            <ComboBoxItem  Content="mm" />
            <ComboBoxItem  Content="deg"/>
        </ComboBox>
        <Button x:Name="delete_coordinate_1" Command="{Binding DeleteCoordinateBlock}"  Margin="3 0 0 0" Width="23" Height="23" Background="#FF1E1E1E">
            
            <Button.BorderThickness>0</Button.BorderThickness>
            <Image Source="resources/img/icons8-cancel-64.png"></Image>
        </Button>
    </StackPanel>
</UserControl>
